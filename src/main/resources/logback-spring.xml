<configuration>
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    <property name="FILE_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level - %msg%n" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${LOG_PATTERN}</pattern></encoder>
    </appender>

    <appender name="NETWORK_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/network.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/network-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>7</maxHistory> <totalSizeCap>2GB</totalSizeCap> </rollingPolicy>
        <encoder><pattern>${FILE_PATTERN}</pattern></encoder>
    </appender>

    <appender name="ENGINE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/engine.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/engine-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory> <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${FILE_PATTERN}</pattern></encoder>
    </appender>

    <appender name="SERVICE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/service-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder><pattern>${FILE_PATTERN}</pattern></encoder>
    </appender>

    <logger name="com.paperio.server.network" level="DEBUG" additivity="true"><appender-ref ref="NETWORK_FILE" /></logger>
    <logger name="com.paperio.server.engine" level="DEBUG" additivity="true"><appender-ref ref="ENGINE_FILE" /></logger>
    <logger name="com.paperio.server.service" level="DEBUG" additivity="true"><appender-ref ref="SERVICE_FILE" /></logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>